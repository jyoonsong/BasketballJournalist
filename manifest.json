{
    "manifest_version": 2,
    "name": "농구 기사 써주세요",
    "version": "1.0",
    "description": "슬퍼하지마 NO NO NO 기사써줄게 NO NO NO",
   
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },

    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    
    "content_scripts":   [
      {
        "matches":   [
                        "http://*/*",
                        "https://*/*"
                     ],
        "js":        [ 
                        "content.js" 
                     ],
        "run_at":    "document_idle"
      }
    ],

    "permissions": [
      "tabs", 
      "activeTab",
      "<all_urls>",
      "http://*/*",
      "https://*/*"
    ]
  }