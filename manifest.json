{
    "manifest_version": 2,
    "name": "농구 기사 써주세요",
    "version": "1.3",
    "description": "슬퍼하지마 NO NO NO 기사써줄게 NO NO NO",
   
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    
    "content_scripts":   [
      {
        "matches":   [
                        "https://sports.news.naver.com/*",
                        "http://sports.news.naver.com/*"
                     ],
        "js":        [ 
                        "content.js" 
                     ],
        "run_at":    "document_idle"
      }
    ],

    "permissions": [
      "activeTab", 
      "http://sports.news.naver.com/*",
      "https://sports.news.naver.com/*"
    ]
  }